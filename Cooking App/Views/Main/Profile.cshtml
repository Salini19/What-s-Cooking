@model Cooking_App.Models.Login

@{
    ViewData["Title"] = "Profile Page";
}

<html>
<head>

    <link href="~/Content/Profile.css.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <form asp-action="Profile" enctype="multipart/form-data">
            <div class="row" style="margin-top:20px;padding:10px;">
                <div class="col-md-6" id="left" style="background:#258CDC;padding:10px;margin-top: 20px;">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-3"></div>
                        <div class="col-md-5" style="margin-left:25px">
                            <div class="text-center">
                                <img src="~/ProfileImages/@ViewBag.PhotoName" class="card-img-top" alt="...">
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>

                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-3"></div>
                        <div class="col-md-6" style="margin-left:20px">
                            <div class="form-group">
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <label style="color: white"><h2 style="font-weight:700">@ViewBag.Username </h2></label>
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-5" style="margin-left:10px">
                            <div class="form-group">
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <label style="color: #85C1E9"><h5>Profile ID :- @ViewBag.ID </h5></label>
                                @Html.Hidden("id", (int)@ViewBag.ID)
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
                <div class="col-md-6" id="right1" style="margin-top:20px;padding:20px;border:1px solid #5C5C29">
                    <div class="row" id="ro">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" id="lbl"> UserName</label>
                                <textarea class="form-control" id="username" name="username" rows="1">@ViewBag.Username</textarea>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="lbl" class="control-label">Password</label>
                                <textarea class="form-control" id="password" name="password" rows="1">@ViewBag.Password</textarea>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="ro">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="lbl" class="control-label">Email</label>
                                <textarea class="form-control" id="email" name="email" rows="1">@ViewBag.Email </textarea>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="lbl" class="control-label">Mobile Number</label>
                                <textarea class="form-control" id="no" rows="1">@ViewBag.Mobile</textarea>

                            </div>
                        </div>
                    </div>
                    <div class="row" id="ro">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="lbl" class="control-label">DOB</label>
                                <textarea class="form-control" placeholder="yyyy-mm-dd" id="dob" name="dob" rows="1">@ViewBag.DOB</textarea>
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="lbl" class="control-label">Gender</label>
                                <select class="form-control" name="gender" id="gender" style="margin-right:300px;">
                                    <option>@ViewBag.Gender</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Transgender</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="ro">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="lbl" class="control-label">Profession</label>
                                <textarea class="form-control" id="profession" name="profession" rows="1">@ViewBag.Profession</textarea>
                                <span asp-validation-for="Profession" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="lbl" class="control-label">City</label>
                                <textarea class="form-control" id="city" name="city" rows="1">@ViewBag.City </textarea>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="ro">
                        <div class="col-md-9"></div>
                        <div class="col-md-3">
                            <input type="submit" value="Save Changes" id="btnalert" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </form>

    }
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">alert("Invalid Username or Password");</script>
    }
    @if (ViewBag.Msg1 != null)
    {
        <script type="text/javascript">alert("Password Changed Sucessfully");</script>
    }
    @if (ViewBag.Msg2 != null)
    {
        <script type="text/javascript">alert("Given input is not valid");</script>
    }

        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
    </body>
</html>