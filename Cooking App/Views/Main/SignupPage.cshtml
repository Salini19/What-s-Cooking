@model Cooking_App.Models.Login

@{
    ViewBag.Title = "SignupPage";
}
<html>
<head>
    <title>SignupPage</title>
    <link href="~/Content/LoginPage.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        @*<div class="modal fade" id="testmodal1" aria-labelledby="testModalLabel" style="margin-top:50px">*@

        @*<div class="modal fade"  style="margin-top:50px">*@
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="margin-top:50px">
                <div class="row">
                    <div class="col-md-5" style="background-color:#258CDC">
                        <div class="row">&nbsp;</div>
                        <div class="row">
                            <span style="font-size:60px;color:white">Whats</span>
                        </div>
                        <div class="row">
                            <span style="font-size:60px;color:white">Cooking</span>
                        </div>
                        <div class="row">
                            <span style="font-size:60px;color:white">App</span>
                        </div>
                        <div class="row"><br /><br /></div>
                        <div class="row" style="background:white;">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <img src="~/Image/google.png" height="50" width="50" />
                                <img src="~/Image/facebook.jpg" height="43" width="43" />

                            </div>
                            <div class="col-md-1"></div>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="row">&nbsp;</div>
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-6" style="border-bottom: 2px solid #273746;">
                                <h4 style="color: #154360;">Registration Form</h4>
                            </div>
                            <div class="col-md-1"></div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-close" id="btnnav1" data-bs-dismiss="modal"></button>
                            </div>
                        </div>
                        <div class="row" style="padding:10x">
                            <table class="table table-borderless">
                                <tr>
                                    <td>&nbsp;</td>
                                    <td>
                                        <span style="color: #21618C;font-weight:600;">Name</span>
                                        <input type="text" id="fname" name="fname" class="form-control" placeholder="Jhon" required />
                                    </td>
                                    <td>
                                        <span style="color: #21618C;font-weight:600;">Surname</span>
                                        <input type="text" id="lname" name="lname" class="form-control" placeholder="Deo" required />
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                            </table>
                        </div>
                        <div class="row" style="padding:10x">
                            <table class="table table-borderless">
                                <tr>
                                    <td style="padding-left: 30px;">
                                        <span style="color: #21618C;font-weight:600;">Email</span>
                                        <input type="email" id="email" name="email" class="form-control" placeholder="example@gmail.com" required />
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                            </table>
                        </div>
                        <div class="row" style="padding:10x">
                            <table class="table table-borderless">
                                <tr>

                                    <td style="padding-left: 30px;">
                                        <span style="color: #21618C;font-weight:600;">Password</span>
                                        <input type="password" id="password" name="password" class="form-control" required />
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                            </table>
                        </div>
                        @*<div class="row" style="padding:10x">
                            <table class="table table-borderless">
                                <tr>

                                    <td style="padding-left: 30px;">
                                        <span style="color: #21618C;font-weight:600;"> Confirm Password</span>
                                        <input type="password" id="confirm password" name="Confirm password" class="form-control" required />
                                       
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                            </table>
                        </div>*@
                        <div class="row" style="">
                            <table class="table table-borderless">
                                <tr>
                                    <td>&nbsp;</td>
                                    <td style="border-bottom: 2px solid #273746;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                                            <label class="form-check-label" for="invalidCheck2" style="color: #21618C;font-weight:600;">
                                                Agree to terms and conditions
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="row" style="margin-top:3px">
                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <input type="submit" class="btn btn-primary" value="Reister" />
                            </div>
                            <div class="col-md-4">
                                @Html.ActionLink("Cancel", "MainPage", null, new { @class = "btn btn-primary" })

                            </div>
                        </div>
                        <div class="row">&nbsp;</div>
                    </div>
                </div>
            </div>
        </div>
        @*</div>*@
        @*@{Html.EndForm();}*@

        <script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    }
    </body>
</html>

